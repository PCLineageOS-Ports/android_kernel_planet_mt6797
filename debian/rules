#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# keep lintian happy:
build: build-arch build-indep
build-arch: build-stamp
build-indep:

build-stamp:
	(cd ..; mkdir KERNEL_OUT)
	@echo configuring
	make O=../KERNEL_OUT ARCH=arm64 aeon6797_6m_n_halium_defconfig
	@echo building kernel
	make O=../KERNEL_OUT ARCH=arm64
	@echo done

clean: checkdir
	(cd ..; rm -rf KERNEL_OUT)

binary-arch:
	-rm -rf debian/tmp
	install -p -d -o root -g root -m 755 debian/tmp
	install -p -d -o root -g root -m 755 debian/tmp/DEBIAN
	install -p -d -o root -g root -m 755 debian/tmp/usr/share/kernel
	install -p    -o root -g root -m 644 ../KERNEL_OUT/arch/arm64/boot/Image.gz-dtb debian/tmp/usr/share/kernel/Image.gz-dtb
	install -p    -o root -g root -m 755 debian/postinst debian/tmp/DEBIAN/
	dpkg-gencontrol -DArchitecture=arm64
	dpkg --build debian/tmp ..

binary-indep:

binary:         binary-arch binary-indep

checkdir:
	@test -f debian/rules

checkroot: checkdir
	@test 0 = `id -u` || { echo "Error: not super-user"; exit 1; }

.PHONY: binary binary-arch binary-indep clean checkroot checkdir build build-arch build-indep
